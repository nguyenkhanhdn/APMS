@model IEnumerable<APMS.Models.ParkingAvailability>

@{
    ViewData["Title"] = "Số chỗ đỗ xe";
}

<h1>Số chỗ đỗ xe</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TotalSlots)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AvailableSlots)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TotalSlots)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AvailableSlots)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> 
            </td>
        </tr>
}
    </tbody>
</table>
